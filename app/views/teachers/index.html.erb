<h1>Teachers List</h1>

<% @teachers.each do |teacher| %>
  <h3><%= link_to teacher.name, teacher_path(teacher) %></h3>  
  <ul>
    <li><%= teacher.bio %></li>

    <% if  teacher.profile_picture.attached? %>
	    <li><%= image_tag rails_blob_path(teacher.profile_picture, only_path: true), class: 'profile-picture' %></li>
	<% end %>

  </ul>
<% end %>

<%= link_to("Voltar", root_path) %>
