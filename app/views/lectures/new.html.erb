<h2>Cadastro de Aulas</h2>

<% if @lecture.errors.any? %>
  <ul>
    <% @lecture.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for [@course, @lecture] do |f| %>
  <%= f.label :issue, 'Assunto:' %>
    <%= f.text_field :issue %>
  <%= f.label :description, 'Descrição:' %>
    <%= f.text_area :description %>
  <%= f.label :date, 'Data da Aula:' %>
    <%= f.date_field :date %>
  <%= f.submit 'Criar' %>
<% end %>