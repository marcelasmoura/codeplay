<h2>Editar Aula</h2>

<% if @lecture.errors.any? %>
  <ul>
    <% @lecture.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for [@course, @lecture] do |f| %>
  <%= f.label :issue %>
    <%= f.text_field :issue %>
  <%= f.label :description %>
    <%= f.text_area :description %>
  <%= f.label :date %>
    <%= f.date_field :date %>
  <%= f.submit 'Salvar' %>
<% end %>