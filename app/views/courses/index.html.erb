<h1><%= t "courses.title_list" %></h1>

<% if @courses.empty?%>
	<%= t 'courses.empty.message' %>
<% end %>

<% @courses.each do |course| %>
	<h3><%= link_to course.name, course_path(course) %></h3>
	<ul>
		<li><%= course.description %></li>
		<li><%= number_to_currency course.price %></li>
	</ul>
<% end %>

<%= link_to("Registrar um Curso", new_course_path) if user_signed_in? %>

 <%= link_to("Voltar", root_path) %>